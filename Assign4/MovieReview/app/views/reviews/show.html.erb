   <body id = "library">
      <div id = "container">         
        <div id = "header"><h1>Movie Details</h1></div>
	<div id="content">
		<p>
		  <strong>Movie Title :</strong>&emsp;
		  <%= @review.movietitle %>
		</p>
		<p>
		  <strong>Year :</strong>&emsp;&emsp;&emsp;&emsp;
		  <%= @review.year %>
		</p>
		<p>
		  <strong>IMDB Rating :</strong>&emsp;
		  <%= @review.rating %>
		</p> 
		<p>
		  <strong>Description :</strong>&emsp;
		  <%= @review.description %>
		</p>
		<p>
		  <strong>Image : </strong>&emsp;&emsp;&emsp;
		  <%= image_tag( "#{@review.id}"+".jpg", :alt => "movie img") %>
		</p>

		<h2>Reviews</h2>
		<%= render @review.mreviews %>
